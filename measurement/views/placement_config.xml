<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_placement_config_list" model="ir.ui.view">
        <field name="name">placement.config.list</field>
        <field name="model">placement.config</field>
        <field name="arch" type="xml">
            <list string="Placement Configuration">
                <field name="place_type"/>
                <field name="diameter"/>
                <field name="quantity"/>
                <field name="product_id"/>
            </list>
        </field>
    </record>

    <record id="view_placement_config_form" model="ir.ui.view">
        <field name="name">placement.config.form</field>
        <field name="model">placement.config</field>
        <field name="arch" type="xml">
            <form string="Placement Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="place_type"/>
                            <field name="diameter"/>

                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_placement_config" model="ir.actions.act_window">
        <field name="name">Placement Config</field>
        <field name="res_model">placement.config</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_placement_config"
              name="Placement Config"
              parent="sale.menu_sale_config"
              action="action_placement_config"
              sequence="12"/>
</odoo>
