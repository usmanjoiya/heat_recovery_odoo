<odoo>
    <!-- Tree/List View -->
    <record id="view_floor_conf_list" model="ir.ui.view">
        <field name="name">floor.names.list</field>
        <field name="model">floor.names</field>
        <field name="arch" type="xml">
            <list>
                <field name="floor_name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_floor_conf_form" model="ir.ui.view">
        <field name="name">floor.names.form</field>
        <field name="model">floor.names</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="floor_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_floor_conf" model="ir.actions.act_window">
        <field name="name">Floor Name Configuration</field>
        <field name="res_model">floor.names</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item under Sales > Configuration -->
    <menuitem id="menu_floor_conf"
              name="Dwell Type Config"
              parent="sale.menu_sale_config"
              action="action_floor_conf"
              sequence="20"/>
</odoo>
