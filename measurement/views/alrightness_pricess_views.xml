<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_alrightness_pricess_list" model="ir.ui.view">
        <field name="name">alrghtness.pricess.list</field>
        <field name="model">alrightness.pricess</field>
        <field name="arch" type="xml">
            <list string="Alrightness Pricess">
                <field name="area"/>
                <field name="guide_price_1"/>
                <field name="area2"/>
                <field name="guide_price_2"/>
                <field name="area3"/>
                <field name="guide_price_3"/>
                <field name="area4"/>
                <field name="guide_price_4"/>
            </list>
        </field>
    </record>

    <record id="view_alrightness_pricess_form" model="ir.ui.view">
        <field name="name">alrightness.pricess.form</field>
        <field name="model">alrightness.pricess</field>
        <field name="arch" type="xml">
            <form string="Alrightness Pricess">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="area"/>
                            <field name="area2"/>
                            <field name="area3"/>
                            <field name="area4"/>
                        </group>
                        <group>
                            <field name="guide_price_1"/>
                            <field name="guide_price_2"/>
                            <field name="guide_price_3"/>
                            <field name="guide_price_4"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alrightness_pricess" model="ir.actions.act_window">
        <field name="name">Alrightness Pricess</field>
        <field name="res_model">alrightness.pricess</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_alrightness_pricess"
              name="Alrightness Pricess"
              parent="sale.menu_sale_config"
              action="action_alrightness_pricess"
              sequence="10"/>
</odoo>
