<odoo>
    <!-- Tree/List View -->
    <record id="view_dwelling_ventilation_list" model="ir.ui.view">
        <field name="name">dwelling.ventilation.list</field>
        <field name="model">dwelling.ventilation</field>
        <field name="arch" type="xml">
            <list>
                <field name="bedroom_no"/>
                <field name="min_vent_rate"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dwelling_ventilation_form" model="ir.ui.view">
        <field name="name">dwelling.ventilation.form</field>
        <field name="model">dwelling.ventilation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="bedroom_no"/>
                        <field name="min_vent_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dwelling_ventilation" model="ir.actions.act_window">
        <field name="name">Dwelling Ventilation Rate</field>
        <field name="res_model">dwelling.ventilation</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item under Sales > Configuration -->
    <menuitem id="menu_dwelling_ventilation"
              name="Dwelling Ventilation Rate"
              parent="sale.menu_sale_config"
              action="action_dwelling_ventilation"
              sequence="50"/>
</odoo>
